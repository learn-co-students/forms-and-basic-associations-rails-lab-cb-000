<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </p>

  <p>
  <%= f.label :genre_name %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %><br/>
  </p>
   

   <%= f.label :notes %>
   <p>
      <textarea name='song[note_contents][]' id='song_notes_1'></textarea><br>
      <textarea name='song[note_contents][]' id='song_notes_2'></textarea>
   </p>

  <%= f.submit %>
<% end %>


