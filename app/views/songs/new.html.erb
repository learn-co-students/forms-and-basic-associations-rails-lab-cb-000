<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocompelete"  %>
  <datalist id = "artists_autocompelete" >
    <% Artist.all.each do |artist| %>
      <option value= "<%= artist.name %>">
    <% end %>
  </datalist>
  <br />
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <label for = "song_note_1">Note 1</lable>
  <input name = "song[note_contents][]"  id = "song_notes_1" ><br />
  <label for = "song_note_2">Note 2</lable>
  <input name = "song[note_contents][]"  id = "song_notes_2" ><br />
  <label for = "song_note_3">Note 3</lable>
  <input name = "song[note_contents][]"  id = "song_notes_3" ><br />

  <%= f.submit %>
<% end %>
