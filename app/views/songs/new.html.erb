<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :notes %>
  <% 3.times do |i| %>
    <%= f.text_field :note_contents, id: "song_notes_#{i}", name: "song[note_contents][]" %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>


