<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_name_autocomplete" %>
  <datalist id="artist_name_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  </br>

  <%= f.label :genre_name %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name, list: "genre_name_autocomplete"  %>
  <datalist id="genre_name_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  </br>

  <%= f.label :notes %>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  </br>
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  </br>

  <%= f.submit %>
<% end %>
